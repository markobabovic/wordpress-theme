# ignore everything in the root except the "wp-content" directory.
/*
!wp-content/

# ignore all files starting with .
.*

# track this file .gitignore (i.e. do NOT ignore it)
!.gitignore
!.vscode
!.dev

# track .editorconfig file (i.e. do NOT ignore it)
!.editorconfig
!.eslintrc
!.scss-lint.yaml
!.sass-lint.yml

# track readme.md in the root (i.e. do NOT ignore it)
!readme.md
!wp-config-sample.php
wp-config.php
package-lock.json
!package.json
!gulpfile.js
!.htaccess
!bitbucket-deploy-example.php

# ignore all files that start with ~
~*

# ignore OS generated files
ehthumbs.db
Thumbs.db

# ignore log files
*.log

# ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so
*.DS_Store

# ignore packaged files
# except .gz and .zip
*.7z
*.dmg
#*.gz
*.iso
*.jar
*.rar
*.tar
#*.zip

# ignore everything in the "wp-content" directory, except:
# "mu-plugins" directory
# "plugins" directory
# "themes" directory
# "db-dump" directory
wp-content/*
!wp-content/mu-plugins/
!wp-content/plugins/
!wp-content/themes/
!wp-content/db-dump/
!wp-content/uploads

#ignore compiled files
wp-content/themes/kinderjugendforderung/js/script.js
wp-content/themes/kinderjugendforderung/style.css
wp-content/themes/kinderjugendforderung/admin.css

# ignore specific themes
wp-content/themes/twenty*/

# ignore node/grunt dependency directories
node_modules/
bower_components/
